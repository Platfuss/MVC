@{
    ViewData["Title"] = "Home Page";
}
@model TranslationModel

<div class="text-center">
    <h3 class="display-2">Funny translator :)</h3>
    <label class="mt-4">Input:</label>
    <input class="form-control" id="input" />

    <label class="mt-4">Result:</label>
    <input class="form-control" id="output" readonly />

    <button class="btn-primary mt-3" type="submit" id="confirmBtn">Confirm</button>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#confirmBtn").on('click', function () {
                $.ajax({
                    type: "GET",
                    url: "/home/Translate",
                    data: { input: $("#input").val() },
                    dataType: "json",
                    contentType: "application/json;charset=utf-8"
                }).done(function (resp) {
                    $("#output").val(resp)
                })
            })
        })
    </script>
} 